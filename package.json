{
  "name": "expo",
  "version": "1.0.0",
  "description": "A student learning platform",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "start:dev": "DEBUG=app nodemon ./server/src/app.js --exec babel-node",
    "build": "npm run clean && babel ./server -d ./dist",
    "migrate": "sequelize db:migrate",
    "migrate:undo:all": "sequelize db:migrate:undo:all",
    "migrate:undo": "sequelize db:migrate:undo",
    "refreshdb": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "heroku-postbuild": "npm run build && npm run migrate",
    "clean": "rm -rf dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "rm -rf ./server/database_test.sqlite3 && NODE_ENV=test npm run refreshdb",
    "test": "NODE_ENV=test nyc --reporter=html --reporter=text --require @babel/register --env=test mocha --timeout 10000 ./server/tests/**/*.spec.js --exit"
  },
  "repository": "git+https://github.com/despeauxz/Expo.git",
  "keywords": [
    "student",
    "learning"
  ],
  "author": "Malik Godwin <despeauxz@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/despeauxz/Expo/issues"
  },
  "homepage": "https://github.com/despeauxz/Expo#readme",
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@sendgrid/mail": "^6.4.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "history": "^4.9.0",
    "jsonwebtoken": "^8.5.1",
    "mailgen": "^2.0.8",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google": "^0.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "random-string": "^0.2.0",
    "randomstring": "^1.1.5",
    "sequelize": "^5.16.0",
    "sequelize-cli": "^5.5.0",
    "sinon": "^7.4.1",
    "slugify": "^1.3.4",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "coveralls": "^3.0.6",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  }
}
